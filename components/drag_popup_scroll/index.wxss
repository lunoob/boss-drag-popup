.drag-popup {
    display: flex;
    flex-direction: column;
    height: 100vh;
    width: 100%;
    position: fixed;
    bottom: 0;
    box-sizing: border-box;
    border-radius: 20px 20px 0 0;
    transform: translate3d(0, 100%, 0);
    transition: transform 150ms ease-out;
    overflow: hidden;
    background-color: #fff;
}

.popup-header {
    padding-top: 20rpx;
}

.top-line {
    width: 80rpx;
    height: 4px;
    background-color: #eaebec;
    border-radius: 4px;
    margin: 0 auto;
}

.popup-title {
    font-size: 16px;
    text-align: center;
    margin-top: 20rpx;
}

.popup-content {
    flex: 1;
    height: 0;
}

/* 用于辅助 wxs 获取数据 */
.hidden-result {
    display: none;
}

.click-mask {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 10;
}

.row-item {
    height: 80rpx;
    line-height: 80rpx;
    padding: 40rpx;
    text-align: center;
}

.row-item + .row-item {
    border-top: 1px solid #f5f5f5;
}

/* t-scroll */
.scroll-wrapper {
    height: 100%;
    width: 100%;
    box-sizing: border-box;
    border: 2rpx solid red;
    overflow: hidden;
}
.scroller {
    background-color: #70f3b7;
    transform: translate3d(0, 0, 0);
}